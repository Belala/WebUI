
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Assets/css/css3.css" rel="stylesheet" />
    <style>
        .content {
            min-height: 200px;
            width: 100%;
            border: 1px solid #808080;
        }

        #shakeFont {
            animation-name: shakeFont;
            animation-duration: 5s;
            animation-iteration-count: infinite;
        }

        #box {
            width: 960px;
            height: 480px;
            position: relative;
        }

        .bgCut { 
            width: 120px;
            height: 120px;
            position: absolute;
        }

        
        .bgCut1 {
            animation-name: switchBG;
            animation-duration: 15s;
            animation-iteration-count: infinite; 
        }
    </style>
</head>
<body>
    <div class="content">
        <h2>颤抖字体</h2>
        <span id="shakeFont">This is shake font</span>
    </div>
    <div class="content">
        <h2>头部动画</h2>
        <div id="box">

            <div class="bgCut bgCut1" style="display:block; left:0px;top:0px;     background-position:0px 0px"></div>
            <div class="bgCut bgCut1" style="display:block; left:0px;top:120px;   background-position:0px -120px"></div>
            <div class="bgCut bgCut1" style="display:block; left:0px;top:240px;   background-position:0px -240px"></div>
            <div class="bgCut bgCut1" style="display:block; left:0px;top:360px;   background-position:0px -360px"></div>
                                                                                  
            <div class="bgCut bgCut1" style="display:block; left:120px;top:0px;     background-position:-120px 0px"></div>
            <div class="bgCut bgCut1" style="display:block; left:120px;top:120px; background-position:-120px -120px"></div>
            <div class="bgCut bgCut1" style="display:block; left:120px;top:240px; background-position:-120px -240px"></div>
            <div class="bgCut bgCut1" style="display:block; left:120px;top:360px; background-position:-120px -360px"></div>
                                                                                  
