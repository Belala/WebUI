            <div class="bgCut bgCut1" style="display:block; left:240px;top:120px; background-position:-240px -120px"></div>
            <div class="bgCut bgCut1" style="display:block; left:240px;top:240px; background-position:-240px -240px"></div>
            <div class="bgCut bgCut1" style="display:block; left:240px;top:360px; background-position:-240px -360px"></div>
                                                                                  
            <div class="bgCut bgCut1" style="display:block; left:360px;top:0px;     background-position:-360px 0px"></div>
            <div class="bgCut bgCut1" style="display:block; left:360px;top:120px; background-position:-360px -120px"></div>
            <div class="bgCut bgCut1" style="display:block; left:360px;top:240px; background-position:-360px -240px"></div>
            <div class="bgCut bgCut1" style="display:block; left:360px;top:360px; background-position:-360px -360px"></div>
                                                                                  
            <div class="bgCut bgCut1" style="display:block; left:480px;top:0px;     background-position:-480px 0px"></div>
            <div class="bgCut bgCut1" style="display:block; left:480px;top:120px; background-position:-480px -120px"></div>
            <div class="bgCut bgCut1" style="display:block; left:480px;top:240px; background-position:-480px -240px"></div>
            <div class="bgCut bgCut1" style="display:block; left:480px;top:360px; background-position:-480px -360px"></div>
                                                                                  
            <div class="bgCut bgCut1" style="display:block; left:600px;top:0px;     background-position:-600px 0px"></div>
            <div class="bgCut bgCut1" style="display:block; left:600px;top:120px; background-position:-600px -120px"></div>
            <div class="bgCut bgCut1" style="display:block; left:600px;top:240px; background-position:-600px -240px"></div>
            <div class="bgCut bgCut1" style="display:block; left:600px;top:360px; background-position:-600px -360px"></div>
                                                                                  
            <div class="bgCut bgCut1" style="display:block; left:720px;top:0px;     background-position:-720px 0px"></div>
            <div class="bgCut bgCut1" style="display:block; left:720px;top:120px; background-position:-720px -120px"></div>
            <div class="bgCut bgCut1" style="display:block; left:720px;top:240px; background-position:-720px -240px"></div>
            <div class="bgCut bgCut1" style="display:block; left:720px;top:360px; background-position:-720px -360px"></div>
                                                                                  
            <div class="bgCut bgCut1" style="display:block; left:840px;top:0px  ;   background-position:-840px 0px"></div>
            <div class="bgCut bgCut1" style="display:block; left:840px;top:120px; background-position:-840px -120px"></div>
            <div class="bgCut bgCut1" style="display:block; left:840px;top:240px; background-position:-840px -240px"></div>
            <div class="bgCut bgCut1" style="display:block; left:840px;top:360px; background-position:-840px -360px"></div>

        </div>
    </div>
